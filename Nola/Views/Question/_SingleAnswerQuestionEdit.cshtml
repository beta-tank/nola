@model Nola.Core.Models.Question.SingleAnswerQuestion

@using (Html.BeginForm("EditSingleAnswer", null, FormMethod.Post, new { id = "question-form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.TextAreaFor(model => model.Text, htmlAttributes: new { @class = "text-editor" })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>      
        <div class="form-group">
            @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<div class="row">
           
        </div>*@

        <div class="form-group">
            <div class="row">
                <button id="show-list" class="btn btn-default">Отменить</button>
                @*@using (Html.BeginForm("Delete", null, FormMethod.Post, new { id = "delete-question-form" }))
                {
                    <input type="submit" value="Удалить" class="btn btn-default" />
                }*@
                
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}